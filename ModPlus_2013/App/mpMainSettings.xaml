<mpc:BaseMetroWindow x:Class="ModPlus.App.MpMainSettings" x:ClassModifier="internal"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:mpc="clr-namespace:ModPlusAPI.Windows.Mpc;assembly=ModPlusAPI"
                      SizeToContent="WidthAndHeight"
                      ResizeMode="NoResize"
                      ShowMaxRestoreButton="False"
                      ShowMinButton="False" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- For IntelliSense -->
                <ResourceDictionary Source="pack://application:,,,/ModPlusAPI;component/Windows/WinResources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <XmlDataProvider x:Key="Lang" Source="E:/ModPlus/Languages/en-US.xml" XPath="ModPlus/AutocadDlls"></XmlDataProvider>
        </ResourceDictionary>
    </Window.Resources>
    <mah:MetroTabControl>
        <mah:MetroTabItem Header="{Binding Source={StaticResource Lang}, XPath=h13}" mah:ControlsHelper.HeaderFontSize="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <GroupBox Header="{Binding Source={StaticResource Lang}, XPath=h2}" Grid.Row="0" Margin="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!-- Language -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Visibility="Collapsed">
                            <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h5}"
                                           MinWidth="120"
                                           VerticalAlignment="Center" Margin="2"></TextBlock>
                            <ComboBox Name="CbLanguages" Margin="2">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=DisplayName}"></TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <!--Theme-->
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h6}"
                                           VerticalAlignment="Center" Margin="2" Width="120"></TextBlock>
                            <ComboBox ItemsSource="{Binding}" Name="MiTheme" Width="120" Margin="2"
                                          SelectionChanged="MiTheme_OnSelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" StrokeThickness="1" Margin="2"
                                                         Stroke="{Binding BorderColorBrush, Mode=OneWay}"
                                                         Fill="{Binding ColorBrush, Mode=OneWay}" />
                                            <TextBlock Text="{Binding Name}" Margin="2" VerticalAlignment="Center"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <ComboBox ItemsSource="{Binding}" Name="MiColor" Width="120" Margin="2"
                                          SelectionChanged="MiColor_OnSelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" StrokeThickness="1" Margin="2"
                                                         Stroke="{Binding BorderColorBrush, Mode=OneWay}"
                                                         Fill="{Binding ColorBrush, Mode=OneWay}" />
                                            <TextBlock Text="{Binding Name}" Margin="2" VerticalAlignment="Center"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h7}"
                                           VerticalAlignment="Center" Margin="2" Width="120"></TextBlock>
                            <ComboBox Name="CbWindowsBorders" Margin="2" Width="244" SelectionChanged="CbWindowsBorders_OnSelectionChanged">
                                <ComboBoxItem Tag="AccentBorder" Content="{Binding Source={StaticResource Lang}, XPath=border1}"></ComboBoxItem>
                                <ComboBoxItem Tag="AccentGlowBrush" Content="{Binding Source={StaticResource Lang}, XPath=border2}"></ComboBoxItem>
                                <ComboBoxItem Tag="AccentBorderGlowBrush" Content="{Binding Source={StaticResource Lang}, XPath=border3}"></ComboBoxItem>
                                <ComboBoxItem Tag="Shadow" Content="{Binding Source={StaticResource Lang}, XPath=border4}"></ComboBoxItem>
                                <ComboBoxItem Tag="NoBorder" Content="{Binding Source={StaticResource Lang}, XPath=border5}"></ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <!--Separator-->
                        <StackPanel Grid.Row="3" Orientation="Horizontal"
                                        ToolTip="{Binding Source={StaticResource Lang}, XPath=tt1}">
                            <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h8}"
                                           Margin="2" Width="120"
                                           VerticalAlignment="Center"></TextBlock>
                            <ComboBox VerticalAlignment="Center" Margin="2" Name="CbSeparatorSettings"
                                          SelectionChanged="CbSeparatorSettings_OnSelectionChanged">
                                <ComboBoxItem Content="."></ComboBoxItem>
                                <ComboBoxItem Content=","></ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <!--Loading-->
                        <CheckBox Grid.Row="4" Margin="2" Content="{Binding Source={StaticResource Lang}, XPath=h15}" Name="ChkQuietLoading"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt5}"
                                      Checked="ChkQuietLoading_OnChecked_OnUnchecked" Unchecked="ChkQuietLoading_OnChecked_OnUnchecked"></CheckBox>
                    </Grid>
                </GroupBox>
                <GroupBox Header="{Binding Source={StaticResource Lang}, XPath=h16}" Grid.Row="1" Margin="2">
                    <!--Check boxes-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h17}" Margin="2" Name="ChkMpRibbon"
                                      Grid.Row="0" Grid.Column="0"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt6}"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"
                                      ></CheckBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h18}" Margin="2" Name="ChkMpPalette"
                                      Grid.Row="1" Grid.Column="0" ToolTip="{Binding Source={StaticResource Lang}, XPath=tt7}"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"></CheckBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h19}" 
                                      Grid.Row="1" Grid.Column="1" Name="ChkMpPaletteFunctions"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt8}" Margin="2"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"></CheckBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h20}"
                                      Grid.Row="1" Grid.Column="2" Name="ChkMpPaletteDrawings"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt9}" Margin="2"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"></CheckBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h21}" Margin="2" Name="ChkMpFloatMenu"
                                      Grid.Row="2" Grid.Column="0"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt10}"></CheckBox>
                        <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="2"
                                       Name="TbFloatMenuCollapseTo" Text="{Binding Source={StaticResource Lang}, XPath=h22}"></TextBlock>
                        <ComboBox Grid.Row="2" Grid.Column="2" Margin="2" VerticalAlignment="Center"
                                      Name="CbFloatMenuCollapseTo" Width="100"
                                      SelectionChanged="CbFloatMenuCollapseTo_OnSelectionChanged">
                            <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=cb1}"></ComboBoxItem>
                            <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=cb2}"></ComboBoxItem>
                        </ComboBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h20}" Margin="2" Name="ChkMpChkDrwsOnMnu"
                                      Grid.Row="2" Grid.Column="3"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt11}"></CheckBox>
                        <CheckBox Grid.Row="3" Grid.Column="0" Margin="2"
                                      Name="ChkMpDrawingsAlone" Content="{Binding Source={StaticResource Lang}, XPath=h23}"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt12}"></CheckBox>
                        <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="2"
                                       Name="TbDrawingsCollapseTo" Text="{Binding Source={StaticResource Lang}, XPath=h22}"></TextBlock>
                        <ComboBox Grid.Row="3" Grid.Column="2" Margin="2" VerticalAlignment="Center"
                                      Name="CbDrawingsCollapseTo" Width="100"
                                      SelectionChanged="CbDrawingsCollapseTo_OnSelectionChanged">
                            <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=cb1}"></ComboBoxItem>
                            <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=cb2}"></ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </GroupBox>
                <GroupBox Header="{Binding Source={StaticResource Lang}, XPath=h3}" Grid.Row="2" Margin="2">
                    <GroupBox.Resources>
                        <Canvas x:Key="appbar_question" Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                            <Path Width="25.3333" Height="39.5833" Canvas.Left="25.3333" Canvas.Top="17.4167" Stretch="Fill" Fill="Black" Data="F1 M 37.2083,49.0833C 39.3945,49.0833 41.1667,50.8555 41.1667,53.0417C 41.1667,55.2278 39.3945,57 37.2083,57C 35.0222,57 33.25,55.2278 33.25,53.0417C 33.25,50.8555 35.0222,49.0833 37.2083,49.0833 Z M 38,17.4167C 44.9956,17.4167 50.6666,21.9416 50.6666,28.5C 50.6666,30.875 49.0833,34.8333 45.9167,36.4167C 42.75,38 41.1667,40.1267 41.1667,42.75L 41.1667,45.9167L 33.25,45.9167L 33.25,43.5417C 33.25,38.1571 38,34.8333 39.5833,33.25C 42.75,30.0833 42.75,29.644 42.75,28.5C 42.75,25.8767 40.6233,23.75 38,23.75C 35.3766,23.75 33.25,25.8767 33.25,28.5L 33.25,30.875L 25.3333,30.875L 25.3333,29.2917C 25.3333,22.7333 31.0044,17.4167 38,17.4167 Z "/>
                        </Canvas>
                    </GroupBox.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="e-mail:" Margin="2" VerticalAlignment="Center"></TextBlock>
                        <TextBox Margin="2" VerticalAlignment="Center" Name="TbEmailAdress"
                                         Width="200" LostFocus="TbEmailAdress_OnLostFocus"
                                         mah:TextBoxHelper.ClearTextButton="True"
                                         mah:TextBoxHelper.Watermark="login@domain.com"></TextBox>
                        <Rectangle Fill="{DynamicResource AccentColorBrush}" Width="20" Height="18">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Uniform" Visual="{StaticResource appbar_question}"></VisualBrush>
                            </Rectangle.OpacityMask>
                            <Rectangle.Triggers>
                                <EventTrigger RoutedEvent="Rectangle.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard TargetName="PopupAboutEmail" TargetProperty="IsOpen">
                                            <BooleanAnimationUsingKeyFrames FillBehavior="HoldEnd">
                                                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="True"></DiscreteBooleanKeyFrame>
                                            </BooleanAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Rectangle.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard TargetName="PopupAboutEmail" TargetProperty="IsOpen">
                                            <BooleanAnimationUsingKeyFrames FillBehavior="HoldEnd">
                                                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"></DiscreteBooleanKeyFrame>
                                            </BooleanAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Rectangle.Triggers>
                        </Rectangle>
                        <Popup Name="PopupAboutEmail" Placement="Mouse"
                                           PopupAnimation="Fade" AllowsTransparency="True">
                            <Border BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}"
                                        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
                                <TextBlock Margin="10" MaxWidth="400" TextWrapping="Wrap" FontSize="14"
                                               Text="{Binding Source={StaticResource Lang}, XPath=tt2}">
                                </TextBlock>
                            </Border>
                        </Popup>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding Source={StaticResource Lang}, XPath=h4}" Grid.Row="3" Margin="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h9}"
                                       Grid.Column="0" Grid.Row="0"
                                       Margin="2" VerticalAlignment="Center"></TextBlock>
                        <TextBox Grid.Column="1" Grid.Row="0" 
                                     mah:TextBoxHelper.SelectAllOnFocus="True"
                                     mah:TextBoxHelper.Watermark="{Binding Source={StaticResource Lang}, XPath=tt3}"
                                     MinWidth="200" Name="TbRegistryKey" IsReadOnly="True"></TextBox>
                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" VerticalAlignment="Center"
                                       Name="TbAboutRegKey"></TextBlock>
                    </Grid>
                </GroupBox>
            </Grid>
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="{Binding Source={StaticResource Lang}, XPath=h14}" mah:ControlsHelper.HeaderFontSize="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Canvas x:Key="appbar_settings" Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                        <Path Width="38.9239" Height="38.9239" Canvas.Left="18.538" Canvas.Top="18.5381" Stretch="Fill" Fill="Black" Data="F1 M 38,23.5C 38.8643,23.5 39.7109,23.5756 40.5337,23.7206L 42.6275,18.5381L 48.1901,20.787L 46.0964,25.9692C 47.6473,27.0149 48.9851,28.3527 50.0308,29.9036L 55.213,27.8099L 57.4619,33.3725L 52.2794,35.4664C 52.4244,36.2891 52.5,37.1357 52.5,38C 52.5,38.8643 52.4244,39.7109 52.2794,40.5337L 57.4619,42.6275L 55.213,48.1901L 50.0308,46.0964C 49.0795,47.5073 47.8865,48.7418 46.5112,49.7405L 48.7844,54.8462L 43.3041,57.2891L 41.0307,52.1828C 40.0533,52.3906 39.0394,52.5 38,52.5C 37.1357,52.5 36.2891,52.4244 35.4664,52.2794L 33.3725,57.462L 27.8099,55.213L 29.9036,50.0309C 28.3527,48.9851 27.0149,47.6473 25.9691,46.0964L 20.787,48.1901L 18.538,42.6275L 23.7206,40.5336C 23.5756,39.7109 23.5,38.8643 23.5,38C 23.5,37.1357 23.5756,36.2891 23.7206,35.4664L 18.538,33.3725L 20.787,27.8099L 25.9691,29.9036C 26.9205,28.4927 28.1135,27.2582 29.4889,26.2594L 27.2157,21.1537L 32.6959,18.7109L 34.9694,23.8172C 35.9468,23.6094 36.9606,23.5 38,23.5 Z M 38,28C 32.4771,28 28,32.4772 28,38C 28,43.5229 32.4771,48 38,48C 43.5228,48 48,43.5229 48,38C 48,32.4772 43.5228,28 38,28 Z "/>
                    </Canvas>
                </Grid.Resources>
                <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                              Name="ChkEntByBlock" Margin="2"
                              Checked="ChkEntByBlock_OnChecked"
                              Unchecked="ChkEntByBlock_OnChecked"
                              VerticalAlignment="Center"
                              Content="{Binding Source={StaticResource Lang}, XPath=h24}"
                              ToolTip="{Binding Source={StaticResource Lang}, XPath=tt13}"></CheckBox>

                <CheckBox Grid.Row="1" Grid.Column="0"
                              Name="ChkFastBlocks" Margin="2"
                              Checked="ChkFastBlocks_OnChecked"
                              Unchecked="ChkFastBlocks_OnChecked"
                              VerticalAlignment="Center"
                              Content="{Binding Source={StaticResource Lang}, XPath=h25}"
                              ToolTip="{Binding Source={StaticResource Lang}, XPath=tt14}"></CheckBox>
                <Button Grid.Row="1" Grid.Column="1" MinWidth="0"
                            Padding="2" ToolTip="{Binding Source={StaticResource Lang}, XPath=tt15}"
                            Name="BtFastBlocksSettings" Click="BtFastBlocksSettings_OnClick">
                    <Rectangle Width="20" Height="20" Fill="{DynamicResource AccentColorBrush}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Uniform"
                                             Visual="{StaticResource appbar_settings}"></VisualBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
                <!--VP to MS-->
                <CheckBox Grid.Row="2" Grid.Column="0"
                              Name="ChkVPtoMS" Margin="2"
                              Checked="ChkVPtoMS_OnChecked"
                              Unchecked="ChkVPtoMS_OnChecked"
                              VerticalAlignment="Center"
                              Content="{Binding Source={StaticResource Lang}, XPath=h26}"
                              ToolTip="{Binding Source={StaticResource Lang}, XPath=tt16}"></CheckBox>
                <CheckBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Margin="2"
                          Name="ChkWipeoutEditOCM" Checked="ChkWipeoutEditOCM_OnChecked"
                          Unchecked="ChkWipeoutEditOCM_OnUnchecked"
                          VerticalAlignment="Center" Width="522"
                          ToolTip="{Binding Source={StaticResource Lang}, XPath=tt18}">
                    <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h53}" TextWrapping="Wrap"
                               MaxWidth="450"></TextBlock>
                </CheckBox>
            </Grid>
        </mah:MetroTabItem>
    </mah:MetroTabControl>
</mpc:BaseMetroWindow>

