<mps:ModPlusWindow x:Class="ModPlus.App.MpMainSettings"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mps="https://modplus.org/winfx/xaml/controls"
                      SizeToContent="WidthAndHeight"
                      ResizeMode="NoResize"
                      ShowMaxRestoreButton="False"
                      ShowMinButton="False" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusStyle;component/Styles/Controls.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <XmlDataProvider x:Key="Lang" Source="E:/ModPlus/Languages/en-US.xml" XPath="ModPlus/AutocadDlls"></XmlDataProvider>
            <XmlDataProvider x:Key="LangApi" Source="E:/ModPlus/Languages/en-US.xml" XPath="ModPlus/ModPlusAPI"></XmlDataProvider>
        </ResourceDictionary>
    </Window.Resources>
    <TabControl>
        <TabItem Header="{Binding Source={StaticResource Lang}, XPath=h13}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <GroupBox Header="{Binding Source={StaticResource Lang}, XPath=h2}" Grid.Row="0" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--Theme-->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h6}"
                                       VerticalAlignment="Center" MinWidth="120"></TextBlock>
                            <ComboBox ItemsSource="{Binding}" Name="MiTheme" 
                                      SelectionChanged="MiTheme_OnSelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="mps:Theme">
                                        <StackPanel Orientation="Horizontal">
                                            <Border CornerRadius="4" Width="40" Height="30"
                                                    Background="{Binding Path=ShowCaseBackgroundBrush}">
                                                <Ellipse HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Width="20" Height="20"
                                                         Fill="{Binding Path=ShowcaseBrush}"></Ellipse>
                                            </Border>
                                            <TextBlock VerticalAlignment="Center" Text="{Binding Path=DisplayName}" Margin="10 0"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <!--Separator-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal"
                                        ToolTip="{Binding Source={StaticResource Lang}, XPath=tt1}">
                            <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h8}" Width="120"></TextBlock>
                            <ComboBox VerticalAlignment="Center" Name="CbSeparatorSettings"
                                      SelectionChanged="CbSeparatorSettings_OnSelectionChanged">
                                <ComboBoxItem Content="."></ComboBoxItem>
                                <ComboBoxItem Content=","></ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <!--Loading-->
                        <CheckBox Grid.Row="2" Content="{Binding Source={StaticResource Lang}, XPath=h15}" Name="ChkQuietLoading"
                                  ToolTip="{Binding Source={StaticResource Lang}, XPath=tt5}"
                                  Checked="ChkQuietLoading_OnChecked_OnUnchecked" Unchecked="ChkQuietLoading_OnChecked_OnUnchecked"></CheckBox>
                    </Grid>
                </GroupBox>
                <GroupBox Header="{Binding Source={StaticResource Lang}, XPath=h16}" Grid.Row="1" >
                    <!--Check boxes-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h17}"  Name="ChkMpRibbon"
                                      Grid.Row="0" Grid.Column="0"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt6}"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"
                                      ></CheckBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h18}"  Name="ChkMpPalette"
                                      Grid.Row="1" Grid.Column="0" ToolTip="{Binding Source={StaticResource Lang}, XPath=tt7}"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"></CheckBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h19}" 
                                      Grid.Row="1" Grid.Column="1" Name="ChkMpPaletteFunctions"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt8}" 
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"></CheckBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h20}"
                                      Grid.Row="1" Grid.Column="2" Name="ChkMpPaletteDrawings"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt9}" 
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"></CheckBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h21}"  Name="ChkMpFloatMenu"
                                      Grid.Row="2" Grid.Column="0"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt10}"></CheckBox>
                        <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" 
                                       Name="TbFloatMenuCollapseTo" Text="{Binding Source={StaticResource Lang}, XPath=h22}"></TextBlock>
                        <ComboBox Grid.Row="2" Grid.Column="2"  VerticalAlignment="Center"
                                      Name="CbFloatMenuCollapseTo" Width="100"
                                      SelectionChanged="CbFloatMenuCollapseTo_OnSelectionChanged">
                            <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=cb1}"></ComboBoxItem>
                            <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=cb2}"></ComboBoxItem>
                        </ComboBox>
                        <CheckBox Content="{Binding Source={StaticResource Lang}, XPath=h20}"  Name="ChkMpChkDrwsOnMnu"
                                      Grid.Row="2" Grid.Column="3"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt11}"></CheckBox>
                        <CheckBox Grid.Row="3" Grid.Column="0" 
                                      Name="ChkMpDrawingsAlone" Content="{Binding Source={StaticResource Lang}, XPath=h23}"
                                      Checked="Menues_OnChecked_Unchecked" Unchecked="Menues_OnChecked_Unchecked"
                                      ToolTip="{Binding Source={StaticResource Lang}, XPath=tt12}"></CheckBox>
                        <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" 
                                       Name="TbDrawingsCollapseTo" Text="{Binding Source={StaticResource Lang}, XPath=h22}"></TextBlock>
                        <ComboBox Grid.Row="3" Grid.Column="2"  VerticalAlignment="Center"
                                      Name="CbDrawingsCollapseTo" Width="100"
                                      SelectionChanged="CbDrawingsCollapseTo_OnSelectionChanged">
                            <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=cb1}"></ComboBoxItem>
                            <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=cb2}"></ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </GroupBox>
                
                <GroupBox Header="{Binding Source={StaticResource LangApi}, XPath=h16}" Grid.Row="2"
                          Name="GroupBoxLicenseServer">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding Source={StaticResource LangApi}, XPath=h17}"
                                   Name="TbLocalLicenseServerIpAddressHeader"
                                   Grid.Row="0" Grid.Column="0"></TextBlock>
                        <AdornerDecorator Grid.Row="0" Grid.Column="1">
                            <TextBox MinWidth="100" mps:TextFieldAssist.SelectAllOnFocus="True"
                                     Name="TbLocalLicenseServerIpAddress"
                                     mps:TextFieldAssist.ClearTextButton="True">
                            </TextBox>
                        </AdornerDecorator>
                        <TextBlock Text="{Binding Source={StaticResource LangApi}, XPath=h18}"
                                   Name="TbLocalLicenseServerPortHeader"
                                   Grid.Row="0" Grid.Column="2"></TextBlock>
                        <AdornerDecorator Grid.Row="0" Grid.Column="3">
                            <mps:NumericBox MinWidth="50" Name="TbLocalLicenseServerPort"
                                            NumericInputMode="Numbers"
                                            HideUpDownButtons="True" Minimum="0" Maximum="65535">
                            </mps:NumericBox>
                        </AdornerDecorator>
                        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5"
                                HorizontalAlignment="Stretch" Name="BtCheckLocalLicenseServerConnection"
                                Click="BtCheckLocalLicenseServerConnection_OnClick"
                                Content="{Binding Source={StaticResource LangApi}, XPath=h19}"></Button>
                        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5"
                                Name="BtStopConnectionToLicenseServer"
                                Click="BtStopConnectionToLicenseServer_OnClick"
                                HorizontalAlignment="Stretch"
                                Content="{Binding Source={StaticResource LangApi}, XPath=h23}"></Button>
                        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5"
                                Name="BtRestoreConnectionToLicenseServer"
                                Click="BtRestoreConnectionToLicenseServer_OnClick"
                                HorizontalAlignment="Stretch"
                                Content="{Binding Source={StaticResource LangApi}, XPath=h24}"></Button>
                        <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5"
                                  Name="ChkDisableConnectionWithLicenseServer"
                                  Content="{Binding Source={StaticResource LangApi}, XPath=h25}"></CheckBox>
                    </Grid>
                </GroupBox>
            </Grid>
        </TabItem>
        <TabItem Header="{Binding Source={StaticResource Lang}, XPath=h14}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Canvas x:Key="appbar_settings" Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                        <Path Width="38.9239" Height="38.9239" Canvas.Left="18.538" Canvas.Top="18.5381" Stretch="Fill" Fill="Black" Data="F1 M 38,23.5C 38.8643,23.5 39.7109,23.5756 40.5337,23.7206L 42.6275,18.5381L 48.1901,20.787L 46.0964,25.9692C 47.6473,27.0149 48.9851,28.3527 50.0308,29.9036L 55.213,27.8099L 57.4619,33.3725L 52.2794,35.4664C 52.4244,36.2891 52.5,37.1357 52.5,38C 52.5,38.8643 52.4244,39.7109 52.2794,40.5337L 57.4619,42.6275L 55.213,48.1901L 50.0308,46.0964C 49.0795,47.5073 47.8865,48.7418 46.5112,49.7405L 48.7844,54.8462L 43.3041,57.2891L 41.0307,52.1828C 40.0533,52.3906 39.0394,52.5 38,52.5C 37.1357,52.5 36.2891,52.4244 35.4664,52.2794L 33.3725,57.462L 27.8099,55.213L 29.9036,50.0309C 28.3527,48.9851 27.0149,47.6473 25.9691,46.0964L 20.787,48.1901L 18.538,42.6275L 23.7206,40.5336C 23.5756,39.7109 23.5,38.8643 23.5,38C 23.5,37.1357 23.5756,36.2891 23.7206,35.4664L 18.538,33.3725L 20.787,27.8099L 25.9691,29.9036C 26.9205,28.4927 28.1135,27.2582 29.4889,26.2594L 27.2157,21.1537L 32.6959,18.7109L 34.9694,23.8172C 35.9468,23.6094 36.9606,23.5 38,23.5 Z M 38,28C 32.4771,28 28,32.4772 28,38C 28,43.5229 32.4771,48 38,48C 43.5228,48 48,43.5229 48,38C 48,32.4772 43.5228,28 38,28 Z "/>
                    </Canvas>
                </Grid.Resources>
                <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                              Name="ChkEntByBlock" 
                              Checked="ChkEntByBlock_OnChecked"
                              Unchecked="ChkEntByBlock_OnChecked"
                              VerticalAlignment="Center"
                              Content="{Binding Source={StaticResource Lang}, XPath=h24}"
                              ToolTip="{Binding Source={StaticResource Lang}, XPath=tt13}"></CheckBox>

                <CheckBox Grid.Row="1" Grid.Column="0"
                              Name="ChkFastBlocks" 
                              Checked="ChkFastBlocks_OnChecked"
                              Unchecked="ChkFastBlocks_OnChecked"
                              VerticalAlignment="Center"
                              Content="{Binding Source={StaticResource Lang}, XPath=h25}"
                              ToolTip="{Binding Source={StaticResource Lang}, XPath=tt14}"></CheckBox>
                <Button Grid.Row="1" Grid.Column="1" MinWidth="0" Style="{DynamicResource ModPlusToolButton}"
                        Padding="0" ToolTip="{Binding Source={StaticResource Lang}, XPath=tt15}"
                        Cursor="Hand"
                        Name="BtFastBlocksSettings" Click="BtFastBlocksSettings_OnClick">
                    <Rectangle Width="20" Height="20" 
                               Fill="{DynamicResource AccentColorBrush}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Uniform"
                                         Visual="{StaticResource appbar_settings}"></VisualBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
                <!--VP to MS-->
                <CheckBox Grid.Row="2" Grid.Column="0"
                              Name="ChkVPtoMS" 
                              Checked="ChkVPtoMS_OnChecked"
                              Unchecked="ChkVPtoMS_OnChecked"
                              VerticalAlignment="Center"
                              Content="{Binding Source={StaticResource Lang}, XPath=h26}"
                              ToolTip="{Binding Source={StaticResource Lang}, XPath=tt16}"></CheckBox>
                <CheckBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" 
                          Name="ChkWipeoutEditOCM" Checked="ChkWipeoutEditOCM_OnChecked"
                          Unchecked="ChkWipeoutEditOCM_OnUnchecked"
                          VerticalAlignment="Center" Width="522"
                          ToolTip="{Binding Source={StaticResource Lang}, XPath=tt18}">
                    <TextBlock Text="{Binding Source={StaticResource Lang}, XPath=h53}" TextWrapping="Wrap"
                               MaxWidth="450"></TextBlock>
                </CheckBox>
            </Grid>
        </TabItem>
    </TabControl>
</mps:ModPlusWindow>

