            <TabItem Header="Функции" controls:ControlsHelper.HeaderFontSize="12">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel CanVerticallyScroll="True" Name="FunctionsPanel">

                    </StackPanel>
